@page "{id:Guid}"
@model contact_management.Pages.Contacts.EditContactModel
@{
    var message = ViewData["ContactEdited"]?.ToString();
}

<form method="post">

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <h1 class="mb-2">Edit Contact</h1>

    <div class="mb-2">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="EditContactViewModel.ID" readonly/>
    </div>

    <div class="mb-2">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="EditContactViewModel.Name" />
    </div>

    <div class="mb-2">
        <label class="form-label">Contact</label>
        <input type="text" class="form-control" asp-for="EditContactViewModel.Phone" />
    </div>

    <div class="mb-2">
        <label class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="EditContactViewModel.Email" />
    </div>

    <div class="mb-2">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

</form>