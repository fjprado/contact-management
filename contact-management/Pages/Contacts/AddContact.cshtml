@page
@model contact_management.Pages.Contacts.AddContactModel
@{    
    ViewData["Title"] = "Add Contact";
    var message = ViewData["ContactDuplicated"]?.ToString();
}

<form method="post">

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-danger" role="alert">
            @message
        </div>
    }

    <h1 class="mb-2">Add New Contact</h1>
    <div class="mb-2">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddContactViewModel.Name"/>
        <span asp-validation-for="AddContactViewModel.Name" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">Contact</label>
        <input type="text" class="form-control" asp-for="AddContactViewModel.Phone" />
        <span asp-validation-for="AddContactViewModel.Phone" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="AddContactViewModel.Email"/>
        <span asp-validation-for="AddContactViewModel.Email" class="text-danger"></span>
    </div>

    <div class="col-3 mb-2 pt-4 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Contacts/ListContact" class="btn btn-warning">Cancel</a>
    </div>

</form>
